<section>
  <h1>My Orders</h1>
  <div class="table">
    <div class="table-row table-head">
      <div>ID</div>
      <div>Pack</div>
      <div>Status</div>
      <div>Total</div>
      <div>View</div>
    </div>
    <% orders.forEach(o => { %>
      <div class="table-row">
        <div>#<%= o.id %></div>
        <div><%= o.pack_name %></div>
        <div><span class="badge status-<%= o.status %>"><%= o.status %></span></div>
        <div>$<%= (o.price_cents/100).toFixed(2) %></div>
        <div><a class="btn btn-ghost" href="/order/<%= o.id %>">Open</a></div>
      </div>
    <% }) %>
    <% if (orders.length === 0) { %>
      <div class="empty">No orders yet.</div>
    <% } %>
  </div>
</section>
